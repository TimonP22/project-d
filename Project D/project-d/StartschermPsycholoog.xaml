            Margin="0,20,0,15"
            Text="Huiswerkmodule"
            FontSize="16"
            FontAttributes="Bold"
            HeightRequest="60"
            WidthRequest="300"
            BackgroundColor="Black"/>
        <Button x:Name="ClientOverviewBtn"
                Margin="0,0,0,15"
