<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="project_d.ClientHomework"
             Title="ClientHomework">
    <ScrollView>
        <VerticalStackLayout Margin="30,10,30,10" Padding="0,5,0,0">
            <Label Text="PROJECT D"
               FontSize="40"
               HorizontalOptions="Center"
               FontAttributes="Bold"
               TextColor="Black"/>
            <Image Source="hr_logo.png"
                HeightRequest="130"
                Aspect="AspectFit"
                Margin="0,20,0,30"
                HorizontalOptions="Center"/>
           
            <Label x:Name="NameHomework"
         FontSize="20"
         HorizontalOptions="Center"
         FontAttributes="Bold"/>



            <Label Text="antwoord" FontSize="18" FontAttributes="Bold"/>
            <Editor x:Name="descriptionEditor" 
                   Placeholder="antwoord"
                   HeightRequest="100"/>

            <Button Text="Submit" 
                VerticalOptions="Center"
                Margin="0,20,0,15"
                HeightRequest="60"
                WidthRequest="300"
                BackgroundColor="Black"
                Clicked="OnSubmitClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>