<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="project_d.HomeworkCreate"
             Title="HomeworkCreate">
    <VerticalStackLayout>
        <Label Text="PROJECT D"
       FontSize="40"
       HorizontalOptions="Center"
       FontAttributes="Bold"
       TextColor="Black"/>
            <Image Source="hr_logo.png"
       HeightRequest="130"
       Aspect="AspectFit"
       Margin="0,20,0,30"
       HorizontalOptions="Center"/>

            <Label Text="description" 
               FontSize="Medium"
               VerticalOptions="Center" />
        <Entry x:Name="Entrydescription" 
               Placeholder="Please fill in the description of the assignment"
               VerticalOptions="Center" />
        <Button Text="Submit" 
                VerticalOptions="Center"
                Margin="0,20,0,15"
                HeightRequest="60"
                WidthRequest="300"
                BackgroundColor="Black"
                Clicked="OnSubmitClicked" />
    </VerticalStackLayout>
</ContentPage>