<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="project_d.AddClientPage"
             Title="Cliënt toevoegen">
    <VerticalStackLayout Margin="30,10,30,10">
        <Label Text="Selecteer een cliënt"
               FontSize="18"
               HorizontalOptions="Center"
               FontAttributes="Bold"
               TextColor="Black"/>
        <Picker x:Name="clientPicker"
                Title="Cliënt"
                Margin="0,5">
        </Picker>
        <Button x:Name="SaveClientBtn"
                Margin="0,20,0,15"
                Text="Toevoegen"
                FontSize="16"
                FontAttributes="Bold"
                HeightRequest="60"
                WidthRequest="300"
                BackgroundColor="Black"
                Clicked="OnSaveClientBtnClicked"/>
        <Button x:Name="CancelBtn"
                Margin="0,0,0,15"
                Text="Terug"
                FontSize="16"
                FontAttributes="Bold"
                HeightRequest="60"
                WidthRequest="300"
                BackgroundColor="Black"
                Clicked="OnCancelBtnClicked"/>
    </VerticalStackLayout>
</ContentPage>

